<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flashSaleProductLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/corner_all_10dp"
    android:orientation="vertical"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="top|end"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/txtDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:text="100%"
            android:textColor="@color/colorMain" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Clamato, Extra Spicy"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/textPriceDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/dashPrice"
            android:text="$00.00"
            android:textColor="@color/persianRed"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dashPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text=" đ"
            android:textColor="@color/persianRed"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/dash_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="$00.00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtPrice"
            android:text=" đ" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/barStillSale"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@color/lightOrange"
            android:gravity="left"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/barSale"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:background="@color/orange"
            android:gravity="left"></RelativeLayout>

        <TextView
            android:id="@+id/statusSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="left"
            android:textColor="@color/colorMain" />
    </RelativeLayout>

    <!--<TextView-->
    <!--android:id="@+id/txtDateExpired"-->
    <!--android:text="Th6 04. 2019"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->
</LinearLayout>